{% extends "GSFestivalBundle:Registration:base.html.twig" %}

{% block title %}
    Inscription {{ registration.level.festival.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <h3>Formulaire d'inscription envoye</h3>

    <dl class="dl-horizontal">
        <dt>Niveau</dt>
        <dl>{{ registration.level.name }}</dl>
        <dt>Role</dt>
        <dl>{% if registration.role %} Guideur/Cavalier {% else %} Suiveur/Cavaliere {% endif %}</dl>
        <dt>Status</dt>
        <dl>{{ registration.status }}</dl>
    </dl>

{% endblock %}