{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/festival.css') }}" />
{% endblock %}

{% block title %}
  Festivals - {{ parent() }}
{% endblock %}

{% block menu %}
    {{ parent() }}
    {{ knp_menu_render('GSFestivalBundle:Builder:mainMenu', {'currentClass': 'active', 'template': 'AppBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}

{% block body %}

  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
  <h1>Festivals</h1>

  <hr>

  {% for type in ['info', 'success', 'danger', 'warning'] %}
      {% for message in app.session.flashbag.get(type) %}
          <div class="alert alert-{{ type }}">
              {{ message }}
          </div>
      {% endfor %}
  {% endfor %}

  {# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
  {% block gsfestival_body %}
  {% endblock %}

{% endblock %}
